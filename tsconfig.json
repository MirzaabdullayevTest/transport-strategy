{
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "es2020",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "moduleResolution": "node",
        "types": ["node"],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": [
        "node_modules",
        "client"
    ],
}